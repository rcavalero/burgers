<div class="container">
  <div class="burger-pic">
    {{!-- <div class="col"> --}}
      <img src="../assets/img/burger.jpg">
    </div>

    <div class="burgers">

      <h1>Burgers!</h1>

      <h2>Burgers that I want to eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>

      <h2>Burgers that I devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>

      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bn">Burger Name:</label>
          <input type="text" id="bn" name="name">
        </div>

        <div class="form-group">
          <label for="ready-to-eat">Ready to Eat?</label><br>
          <input type="radio" name="devoured" value="0" checked> Ready to Eat!<br>
          <input type="radio" name="devoured" value="1"> Devoured!
        </div>

        <button type="submit">Add Burger</button>
      </form>
  </div>
</div>